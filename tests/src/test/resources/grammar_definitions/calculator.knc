kanonic:{
  name: calculator;
};

IDENT: "[a-zA-Z][a-zA-Z_]*";
PLUS: "+";
MINUS: "-";

root
    : expr --> root_expr
    ;

expr
    : lhs=expr PLUS rhs=math_op --> expr_plus
    | lhs=expr MINUS rhs=math_op --> expr_minus
    | math_op --> expr_fall
    ;

math_op
    : math_op FLASH_FORWARD atom --> expr_div
    | math_op ASTERISK atom      --> expr_mult
    | atom                       --> expr_atom
    ;

atom
    : IDENT --> atom_ident
    ;
